<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <filter>
        <filter-name>CheckSessionFilter</filter-name>
        <filter-class>filters.CheckSessionFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CheckSessionFilter</filter-name>
        <url-pattern>/pages/*</url-pattern>
    </filter-mapping>


    <welcome-file-list>
        <welcome-file>pages/main.jsp</welcome-file>
    </welcome-file-list>

    <listener>
        <description>HttpSessionListener</description>
        <listener-class>listeners.SessionListener</listener-class>
    </listener>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>listeners.ContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>SecondServlet</servlet-name>
        <servlet-class>servlets.SecondServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalcServlet</servlet-name>
        <servlet-class>calculator.servlets.CalcServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckOperationsServlet</servlet-name>
        <servlet-class>calculator.servlets.CheckOperationsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowImage</servlet-name>
        <servlet-class>servlets.ShowImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PdfContentServlet</servlet-name>
        <servlet-class>servlets.PdfContent</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PdfContentServlet</servlet-name>
        <url-pattern>/PdfContentServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SecondServlet</servlet-name>
        <url-pattern>/SecondServlet2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalcServlet</servlet-name>
        <url-pattern>/CalcServlet2</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowImage</servlet-name>
        <url-pattern>/ShowImage</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CheckOperationsServlet</servlet-name>
        <url-pattern>/CheckOperationsServlet2</url-pattern>
    </servlet-mapping>


    <error-page>
        <error-code>404</error-code>
        <location>/errors/404.html</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/errors/400.html</location>
    </error-page>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <!--<jsp-config>-->
        <!--<jsp-property-group>-->
            <!--<url-pattern>*.jsp</url-pattern>-->
            <!--<page-encoding>UTF-8</page-encoding>-->
        <!--</jsp-property-group>-->
    <!--</jsp-config>-->

    <resource-ref>
        <res-ref-name>jdbc/Library</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
        <res-sharing-scope>Shareable</res-sharing-scope>
    </resource-ref>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <jsp-config>
        <jsp-property-group>
            <display-name>header_and_footer</display-name>
            <url-pattern>/pages/*</url-pattern>
            <page-encoding>UTF-8</page-encoding>
            <include-prelude>/jspf/header.jspf</include-prelude>
            <include-coda>/jspf/footer.jspf</include-coda>
        </jsp-property-group>
    </jsp-config>


</web-app>